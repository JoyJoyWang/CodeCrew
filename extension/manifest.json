{
  "manifest_version": 3,
  "name": "LeetCode Friends Squad",
  "description": "朋友刷题小组+排行榜+提醒：在LeetCode显示今日进度与好友排名。",
  "version": "0.1.0",
  "action": {
    "default_title": "LeetCode Squad",
    "default_popup": "popup.html"
  },
  "permissions": [
    "storage",
    "alarms"
  ],
  "host_permissions": [
    "https://leetcode.com/*",
    "https://leetcode.cn/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://leetcode.com/*",
        "https://leetcode.cn/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}

